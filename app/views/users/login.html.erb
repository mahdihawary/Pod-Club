<h1 class = "text-center">Login to Pod Club</h1>
<br>

<% if flash[:message] %>
  
    <p style="color:red;"><%= flash[:message] %></p>
<% end %>
<div class="row ">
<div class="col-sm"></div>
<div class="col-sm text-center">
<%= form_tag "/login" do  %>
    <%= text_field_tag :username,"", class: 'form-control ', placeholder: "Enter Username"%>
<br>
    <%= password_field_tag :password,"", class: 'form-control', placeholder: "Enter Password" %>
    <%= submit_tag "Login!" , :class => "btn btn-dark mt-3"%>
<% end %>
</div>
<div class="col-sm"></div>
</div>




